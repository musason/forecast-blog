<div class="blog-main">
<h1>TV Blog</h1>
<h2>{{eppShowName}}</h2>
<h2>Season {{seasonName}}</h2>
<h3>{{eppName}}</h3>
<div>
  {{#if blogValue}}
    {{#each blogValue}}
    <div class="individual-blog">
      <div class="blog-name">BLOG</div>
      <div class="individual-blog-name">
      <h5>{{myNickname}}</h5>
      <p>{{this.comment}}</p>
      </div>
      {{#if this.blogOwner}}
      <div class="individual-blog-buttons">
        <a href="/{{airDate}}/{{epId}}/{{eppName}}/{{eppShowName}}/{{seasonName}}/{{this._id}}/edit">
          <button type="button" class="btn btn-outline-secondary">Edit</button>
        </a>
        <form action="/{{this._id}}/delete" method="POST">
          <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>
      </div> 
      {{/if}}
    </div>
    {{/each}}
  {{/if}}
</div>


<div class="blog-create-form">
  <form action="/{{airDate}}/{{epId}}/{{eppName}}/{{eppShowName}}/{{seasonName}}" method="POST">
  <div class="post-blog">
    <div class="form-group">
        <textarea name="comment" class="form-control" style="min-width: 100%" id="exampleFormControlTextarea1" placeholder="Write your Blog here"  rows="3"></textarea>
    </div>
    <div>
        <button type="submit" class="btn blog-post-button btn-outline-dark">Post</button>
    </div>
  </div>
  </form>
</div>



<form action="/search" method="POST">
<div class="search-form">
  <div class="search-input">
    <input name="seriesName" class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Search Tv-Series...">
  </div>
  <div class="search-button">
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</div>
</form>


<div class="search-result">
{{#each searchResult}}
  <div>
    <a href="/search/{{this.id}}">
    <h1>{{this.name}}</h1>
    <img src="https://image.tmdb.org/t/p/w185{{this.poster_path}}" alt="">
    </a>
  </div>
{{/each}}
</div>

